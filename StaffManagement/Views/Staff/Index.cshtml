@model IEnumerable<StaffManagement.Models.Staff>

<h2>Staff List</h2>
<a href="/Staff/Create" class="btn btn-primary">Add New Staff</a>
<a href="/Staff/AdvancedSearch" class="btn btn-secondary">Advanced Search</a>
<a href="/Staff/ExportToExcel" class="btn btn-secondary">Export to Excel</a>
<a href="/Staff/ExportToPDF" class="btn btn-secondary">Export to PDF</a>
<table class="table">
    <thead>
        <tr>
            <th>Staff ID</th>
            <th>Full Name</th>
            <th>Birthday</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staff in Model)
        {
            <tr>
                <td>@staff.StaffId</td>
                <td>@staff.FullName</td>
                <td>@staff.Birthday.ToString("yyyy-MM-dd")</td>
                <td>@(staff.Gender == 1 ? "Male" : "Female")</td>
                <td>
                    <a href="/Staff/Edit/@staff.StaffId" class="btn btn-warning">Edit</a>
                    <a href="/Staff/Delete/@staff.StaffId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

